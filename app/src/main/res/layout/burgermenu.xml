<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:id="@+id/BurgerMenu"
    android:background="@color/design_default_color_background">

    <LinearLayout
        android:id="@+id/LLUP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1)"
                android:textSize="20sp">
            </TextView>
            <ToggleButton
                android:id="@+id/toggleButton_cameraOpenClose"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textSize="15sp"
                android:textOff="Camera open"
                android:textOn="Camera close" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2)"
                android:textSize="20sp">
            </TextView>
            <Spinner
                android:id="@+id/spinner_cpatureInfo"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:background="@color/grayspinner"

                app:layout_constraintTop_toBottomOf="@id/textView_captureState"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3)"
                android:textSize="20sp">
            </TextView>
            <ToggleButton
                android:id="@+id/toggleButton_captureStartStop"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="15sp"

                android:text="cameraOpenClose"
                android:textOn="Stop capture"
                android:textOff="Start capture" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4)"
                android:textSize="20sp">
            </TextView>
            <ToggleButton
                android:id="@+id/toggleButton_previewStartStop"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="15sp"

                android:text="previewOpenClose"
                android:textOn="Stop preview"
                android:textOff="Start preview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5)"
                android:textSize="20sp">
            </TextView>
            <ToggleButton
                android:id="@+id/toggleButton_handpaint"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="15sp"

                android:text="previewOpenClose"
                android:textOn="Hide Hand"
                android:textOff="Calibrate Hand" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H"
                    android:textSize="20sp">
                </TextView>
                <SeekBar
                    android:id="@+id/seekBar_colorH"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:min="0" />
                <TextView
                    android:id="@+id/TV_current_H"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textSize="20sp">
                </TextView>
                <SeekBar
                    android:id="@+id/seekBar_colorS"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:min="0" />
                <TextView
                    android:id="@+id/TV_current_S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:textSize="20sp">
                </TextView>
                <SeekBar
                    android:id="@+id/seekBar_colorV"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:min="0" />
                <TextView
                    android:id="@+id/TV_current_V"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp">
                </TextView>
            </LinearLayout>
            <Button
                android:id="@+id/Save_HSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save HSV">

            </Button>

        </LinearLayout>


        <SeekBar
            android:id="@+id/seekBar_brightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="0" />

        <Button
            android:id="@+id/End_Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE">

        </Button>
    </LinearLayout>

</LinearLayout>