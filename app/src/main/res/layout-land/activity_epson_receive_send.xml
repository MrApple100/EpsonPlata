<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <data>

    </data>
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    >
        <fragment
            android:id="@+id/fragment_send"
            android:name="ru.object.epsoncamera.epsonRTSP.FragmentEpsonSend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/HideShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide"
            app:layout_constraintBottom_toBottomOf="parent">
        </Button>
</RelativeLayout>
        <fragment
            android:layout_weight="1"
            android:id="@+id/fragment_receive"
            android:name="ru.object.epsoncamera.epsonRTSP.live.FragmentReceive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



    </LinearLayout>
</layout>
